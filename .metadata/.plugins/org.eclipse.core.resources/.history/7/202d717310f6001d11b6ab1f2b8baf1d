package taketrans;

public class Main2 {

	public static void main(String[] args) {
		// 사람 객체 생성
		
		Person inbi = new Person("박인비", 10000);
		Person nara = new Person("권나라", 5000);
		
		// 버스 객체 생성
		
		Subway subway1000 = new Subway("분당선");
		
		
		
		// 사람이 버스를 탄다
		inbi.takeSubway(subway1000);
		nara.takeSubway(subway1000);
		
		
		
		inbi.showInfo();
		subway1000.showInfo();
		
		System.out.println();
		
		nara.showInfo();
		subway1000.showInfo();
		
	}

}
