package operator;

public class PrintFormat {

	public static void main(String[] args) {
		//printf("문자열 포멧", 객체) 함수
		// 서식 문자 - %d, : 정수, %f - 실수, %s - 문자열
		// 이스케이프 문자 - \n : 줄바꿈, \t : 탭
		
		int year = 2022;
		System.out.println("올해는 " + year + "년 입니다.");
		System.out.printf("올해는 %d년 입니다.", year);
		System.out.printf("\n-----------------------------------");
		
		String nick = "얼음 공주";
		System.out.printf("그녀의 별명은 %s입니다.", nick);
		System.out.printf("\n-----------------------------------");
	}

}
