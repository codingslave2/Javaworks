package transport;

public class Main {

	public static void main(String[] args) {
		// 사람 객체 생서
		Person pl = new Person("조혜원", 10000);
		Person p2 = new Person("마운트", 20000);
		
		// 버스 객체 생성
		Bus bus740 = new Bus("740");
		Taxi taxi2222 = new Taxi("2222");
		
		pl.take(bus740, 1300);
		pl.take(taxi2222, 4800);
		
		pl.showInfo();
		bus740.showInfo();
		taxi2222.showInfo();
	}

}
