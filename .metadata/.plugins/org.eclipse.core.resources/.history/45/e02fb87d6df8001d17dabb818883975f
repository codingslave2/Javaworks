package objectArray;

public class Book {
	
	String bookName;
	String author;
	
	Book(String bookName, String author){
		this.bookName = bookName;
		this.author = author;
	}
	
	void bookInfo() {
		System.out.println(bookName + ", " + author);
	}
	
	// 책 이름을 입력하는 매소드
	void setBookName(String bookName) {
		this.bookName = bookName;
	}
	
	// 저자를 입력하는 매소드
	void setAuthor(String author) {
		this.author = author;
	}
	
	
}
