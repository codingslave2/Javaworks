package ifExample;

public class Switchcase1 {

	public static void main(String[] args) {
		// switch - case문 (조건의 값이 정해져 있을 때 주로 사용)
		// 순위에 따른 메달 색상 출력
		
		int rank = 2;
		char medalColor = ' ';
		
		switch(rank) {
		case 1:
			medalColor = 'G';
			break;
		case 2:
			medalColor = 'S';
			break;
		}
		System.out.println("메달 색깔은" + medalColor +"입니다.");
		
		
	}

}
